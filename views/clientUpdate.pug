extends layout

block sidebar
    ul(class='sidebar-nav')
        li
            a(href='/') Home
        li
            a(href='/clients') All clients

block content
    h2= message + ' ' + id
    form(method='POST' action='/clients/' + id + '/update')
        div.form-group
            input(type='text' name='name' placeholder='name' required=true)
            br
            input(type='submit', value='update')