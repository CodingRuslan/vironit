extends layout

block sidebar
    ul(class='sidebar-nav')
        li
            a(href='/') Home
        li
            a(href='/ingredients') All ingredients

block content
    h2= message + ' ' + id
    form(method='POST' action='/ingredients/' + id + '/update')
        div.form-group
            label name
            input(type='text' name='name'  required=true)
            br
            label timeCook
            input(type='number' name='timeCook' required=true)
            br
            input(type='submit', value='update')